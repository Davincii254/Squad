{{#partial "content"}}
    <section class="landing-pg">
        <div class="land-left">
        </div>
        <div class="land-right">
        </div>
        <div class="squad">
            <div id="newMember">
                <p class="close">&cross;</p>
                <h2>Choose Your Squad Members</h2>
            {{#each heroes}}
                 <div class="hero-item">
                  <img src="/img/ironman.jpg" alt="">
                  <div class="hero-detail">
                    <p>Name: {{name}}</p>
                    <p>Super power: {{ power }}</p>
                    <a class="btns" href="/squad/new/{{id}}">Add To Squad</a>
                  </div>
                </div>
            {{/each}}
            </div>
            <h2>
                <a class="btns" href="/squad-form">Create Your Squad</a>
                <br><br>
        {{#if squads}}
            SQUADS
            </h2>
        {{#each squads}}
            <div class="squad-cont">
                <img src="" alt="">
                <div>
                  <h1>{{ squadName }} </h1>
                    <p>Id: {{squadId}}</p>
                    <p>Purpose: {{cause}}</p>
                    <p>Max participants: {{ size }}</p>
                    <br><br>

                </div>
            </div>
        {{/each}}
        {{else}}
            <h2>Please create a squad to continue</h2>
        {{/if}}
        </div>
    </section>
{{/partial}}
{{> layout.hbs}}