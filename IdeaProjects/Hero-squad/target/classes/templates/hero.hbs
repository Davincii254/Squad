
{{#partial "content"}}
    <head>

        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/style.css">

        <title>Hero Squad</title>
    </head>
    <header>
        <hr class="nav-hr" style="padding-top:0px;">
        <nav class="navbar justify-content-center bg-dark">
            <ul class="nav">
                <a class="nav-item nav-link" href="/"><li>Home</li></a>
                <a class="nav-item nav-link" href="/hero"><li>Hero</li></a>
                <a class="nav-item nav-link" href="/squad"><li>Squad</li></a>
            </ul>
        </nav>
    </header>

    <div class="jumbotron text-center">
        <h2> <a class="btns display-4" href="/hero-form" >Create Your Hero</a> <br><br> </h2>
        <h3 class="display-4">OUR HEROES</h3>
        <div class="container-heroes">
            <div class="card">
                <div class="card-body text-black">

        <div class="heroes">
            <div class="card-text text-black">
            {{#each hero}}
                <div class="hero-item">
                    <p>Name: {{ name }} </p>
                    <p>Special power: {{ power }}</p>
                    <p>Age: {{ age }}</p>
                    <p>Weakness: {{ weakness }}</p>
                    <p>Id: {{ id }}</p>
                    <a href="/squad" class="btns">Add {{ name }} To Squad</a>
                </div>

            {{/each}}
        </div>
        </div>
            </div>
            </div>
        </div>
    </div>
    </section>
{{/partial}}
{{> layout.hbs}}
